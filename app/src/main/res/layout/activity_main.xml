<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="peps.company.algerie.com.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="200dp"
         android:layout_weight="1"
         android:weightSum="3"
         android:orientation="horizontal">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:layout_weight="1"
             android:weightSum="2"
             android:orientation="vertical"
             android:gravity="center">

             <ImageView
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:src="@drawable/tableau_de_bord"/>


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:text="Tableau de Bord"
                 android:textColor="#ffffff"
                 android:padding="5dp"
                 android:textSize="18dp"
                 android:textStyle="bold"
                 android:layout_margin="10dp"
                 android:gravity="center"
                 />


         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:layout_weight="1"
             android:weightSum="2"
             android:orientation="vertical"
             android:gravity="center">

             <ImageView
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:src="@drawable/gestion_des_tables"/>


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:text="Gestion des tables"
                 android:textColor="#ffffff"
                 android:padding="5dp"
                 android:textSize="18dp"
                 android:textStyle="bold"
                 android:layout_margin="10dp"
                 android:gravity="center"

                 />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:layout_weight="1"
             android:weightSum="2"
             android:orientation="vertical"
             android:gravity="center">

             <ImageView
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:src="@drawable/gestion_des_eleves"/>


             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:text="Gestion des élèves"
                 android:textColor="#ffffff"
                 android:padding="5dp"
                 android:textSize="18dp"
                 android:textStyle="bold"
                 android:layout_margin="10dp"
                 android:gravity="center"


                 />

         </LinearLayout>


     </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/repartition_annuelle"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Répartition Annuelle"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:gravity="center"


                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/repartition_cyclique"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Répartition Cyclique"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/test_aptitude"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Teste d'aptitude"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:gravity="center"

                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/moyen_trimestrielle"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Moyenne Trimestrielles"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/emploi_du_temps"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Emploi du temps"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:gravity="center"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/cahier"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Menu N°9"
                    android:textColor="#ffffff"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:gravity="center"

                    />

            </LinearLayout>


        </LinearLayout>






    </LinearLayout>
</ScrollView>
